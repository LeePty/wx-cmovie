.top {
    display: flex;
    background-color: beige;
}
.top_text {
    font-family: "STXihei";
    margin-left: 15px;
    font-size: 15px;
    padding: 20px 0;
}
.top_select {
    border-style:solid;
    border-radius: 10rpx;
    text-align: center;
    padding: 4px;
    font-size: 15px;
    flex: 1;
    margin: 10px 20px 10px 10px;
    background-color: white;
}
.item {
    background-color: #FFFFFF;
    position:relative;
    padding: 10px;
    border-width:1px;
    border-bottom-style: solid;
    border-color: #ccc;
    line-height: 20px;
}
.nm {
    margin-top: 5px;
    color: #222222;
    font-size: 16px;
}
.cn-addr {
    color: #666666;
    font-size: 12px;
    overflow:hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
    width: 310px;
    margin-top: 4px;
    flex: 1;
}
#price {
    font-size: 15px;
    display: inline-block;
    margin-left: 20px;
    color: red;
}
#text {
    border-style:solid;
    border-width:1px;
    margin-left: -2px;
    border-top-right-radius: 2px;
    border-bottom-right-radius: 2px;
    font-size: 10px;
    color: #8bb7ce;
    padding: 2px;
}