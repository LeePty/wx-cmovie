.top {
    height: 200px;
    background-color: #E0E0E0;
}
.t{
    display: flex;
}
.op {
    display: flex;
    margin-top: 5px
}
.do {
    vertical-align:middle;
    height: 30px;
    width: 150px;
    background-color: red;
    color: white;
    font-size: 14px;
    text-align: center;
}
#text {
    height: 30rpx;
    font-size: 14px;
    margin-top: 5px;
    color: #666666;
    overflow:hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 210rpx;
}
.mv-nm {
    height: 30rpx;
    font-size: 25px;
    font-weight:bold;
    color:black;
}
.mv-sc {
    float:right;
    color: orange;
    margin-right: 15rpx;
}
.vd {
    margin-top: 10rpx;
    margin-left: 30rpx;
}
.mv-vd {
    width:200rpx;
    height:300rpx;
    object-fit: fill;
}
.mv-top-detail {
    margin-top: 20rpx;
    margin-left: 30rpx;
    margin-bottom: 10rpx;
    display: block;
    flex-direction: row;
    width: 100%;
    padding: 10rpx;
    position: relative;
    overflow: hidden;
    z-index: 1;
    height: 100%;
}
.desc {
    display: flex;
    flex-direction: column;
    padding: 3%;
    box-sizing: border-box;
    align-items: center;
    background-color: white;
}
.mv-dra {
    margin-top: 10rpx;
    font-size: 15px;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
}
.mv-bottom {
    background-color: white;
}
.mv-bottom-top {
    padding: 10px;
}
.bottom-top {
    font-weight: bold;
    padding:30rpx;
    font-size:16px;
}
#text1 {
    font-size:13px;
    margin-left:10px;
    color:lightgrey;
}
.hcuts-detail {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 15px;
    line-height: 20px;
    margin: 10px 0px;
}
.hcuts-img {
    width:30px;
    height:30px;
    border-radius:50%;
}
.line {
    width: 100%;
    height:1px;
    background-color: #E0E0E0;
}